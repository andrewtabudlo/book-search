<div class="row">
  <div class="col s12 m6 offset-m3">
    <div class="card">
      <div class="card-image">
        <img src=<%= @book.image_link %>>
        <span class="card-title"><%= @book.title %></span>
      </div>
      <div class="card-content">
      <ul class="collection">
        <li class="collection-item">Author(s): <%= @book.authors %></li>
        <li class="collection-item">ISBN: <%= @book.isbn %></li>
        <li class="collection-item">Description: <%= @book.description %></li>
      </ul>
      </div>
    </div>
  </div>
</div>